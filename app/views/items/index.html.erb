<%if user_signed_in?%>
	<% @items.each do |item| %>
		<h2><%= link_to item.title, item %></h2>
		<p><%= item.description %></p>
		<%= link_to 'Mark As Complete', complete_item_path(item), method: :patch, class: "btn btn-primary"%>
		<%= link_to 'delete', item_path(item), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"%>
	<%end%>
<%else%>
	<%= render 'layouts/static_landing_page' %>
<%end%>
