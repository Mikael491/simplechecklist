<%if user_signed_in?%>

	
	<% @items.each do |item| %>


		<%if item.completed? %>

		<div class="row item">
			<h2 style="opacity: 0.5"><strike><%= link_to item.title, item %></strike></h2>
			<p style="opacity: 0.5"><strike><%= item.description %></strike></p>
			<%= link_to complete_item_path(item), method: :patch, class: "btn btn-primary" do %>
				<i class="fa fa-lg fa-check"></i>
			<%end%>
			<%= link_to item_path(item), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" do %>
				<i class="fa fa-lg fa-trash"></i>
			<%end%>
		</div>

		<%else%>

		<div class="row item">
			<h2><%= link_to item.title, item %></h2>
			<p><%= item.description %></p>
			<%= link_to complete_item_path(item), method: :patch, class: "btn btn-primary" do%>
				<i class="fa fa-lg fa-check"></i>
			<%end%>
			<%= link_to item_path(item), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" do %>
				<i class="fa fa-lg fa-trash"></i>
			<%end%>
			<%end%>
		</div>


	<%end%>


<%else%>
	<%= render 'layouts/static_landing_page' %>
<%end%>
